{
  "name": "V.D. Autofiller",
  "description": "Login Autofiller for Velog Dashboard",
  "manifest_version": 3,
  "version": "1.0.0",
  "icons": {
    "16": "favicon.png",
    "32": "favicon.png",
    "64": "favicon.png"
  },
  "permissions": ["cookies", "activeTab"],
  "host_permissions": ["https://velog.io/*", "http://localhost:3000/*"],
  "background": {
    "service_worker": "./contents/background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost:3000/*"],
      "js": ["./contents/vd.js"]
    },
    {
      "matches": ["https://velog.io/*"],
      "js": ["./contents/velog.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["velog.css", "favicon.png"],
      "matches": ["https://velog.io/*"]
    }
  ]
}
